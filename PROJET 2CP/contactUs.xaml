<Page x:Class="PROJET_2CP.contactUs"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PROJET_2CP"
      mc:Ignorable="d" 
      d:DesignHeight="610" d:DesignWidth="950"
      Title="contactUs">

    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="Black" Opacity="0.6"></SolidColorBrush>
        </Grid.Background>
    <StackPanel x:Name="form" Orientation="Vertical">
            <StackPanel x:Name="forUser" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 50 0 0">
           
        </StackPanel>
            <StackPanel x:Name="forPassword" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0">
           
            </StackPanel>
            <StackPanel x:Name="forSubject" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0">
            
        </StackPanel>
            <StackPanel x:Name="forMessage" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0">
           
        </StackPanel>
        <Button x:Name="send" Content="Send" Height="50" Width="200" FontSize="20" HorizontalAlignment="Center" Margin="0 18 0 0" Click="send_Click"></Button>
    </StackPanel>
    </Grid>
</Page>
